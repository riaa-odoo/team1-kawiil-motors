<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_search_view_inherit_motorcycle_registry" model="ir.ui.view">
        <field name="name">product.template.search.view.inherit.motorcycle.registry</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//search//field[@name='categ_id']" position="after">
                <filter name="detailed_type" string="Producto Motorcycle" domain="[('detailed_type', '=', 'motorcycle')]"/> 
            </xpath>
        </field>
    </record>
</odoo>
