<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_repair_order_form_inherit_repair_order" model="ir.ui.view">
        <field name="name">view.repair.order.form.inherit.repair.order</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"></field>
        <field name="arch" type="xml">
            <xpath expr="//group//field[@name='description']" position="before">
                <field name="vin"/>
            </xpath>
            <xpath expr="//group//field[@name='currency_id']" position="after">
                <field name="current_mileage"/>
            </xpath>
        </field>
    </record>
</odoo>