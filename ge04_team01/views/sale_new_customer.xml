<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_new_customer_form_inherit_sale_order" model="ir.ui.view">
        <field name="name">sale.order.new.customer.form.inherit.sale.order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <!--             Use Xpath -->
            <xpath expr="//header" position="inside">
                <field name="is_new_customer" invisible="1" />
                <button name="apply_discount" data-hotkey="v"
                    string="Apply Discount" type="object" context="{'validate_analytic': True}"
                    attrs="{'invisible': ['|', ('is_new_customer', '=', False), ('state', 'not in', ['draft'])]}" />
            </xpath>
        </field>
    </record>
</odoo>